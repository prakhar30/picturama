{
  "name": "picturama",
  "productName": "Picturama",
  "version": "1.4.0-dev",
  "description": "Digital image organizer powered by the web",
  "author": "Lo√Øc Nogues <nogues.loic@gmail.com>, Til Schneider <github@murfman.de>",
  "license": "MIT",
  "main": "dist/background.js",
  "engineStrict": true,
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "build": {
    "appId": "github.picturama",
    "afterSign": "src/package/afterSignHook.js",
    "mac": {
      "category": "public.app-category.photography",
      "hardenedRuntime": true,
      "entitlements": "src/package/entitlements.mac.plist",
      "electronLanguages": [
        "cs",
        "de",
        "en",
        "es",
        "fr",
        "zh"
      ]
    },
    "linux": {
      "category": "Graphics"
    },
    "publish": null,
    "directories": {
      "output": "dist-package",
      "buildResources": "src/package"
    },
    "files": [
      "dist/**",
      "!**/node_modules/sharp/docs",
      "!**/node_modules/sharp/src",
      "!**/node_modules/sqlite3/src"
    ],
    "extraResources": {
      "to": "app",
      "filter": [
        "migrations/**"
      ]
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "clean": "rm -rf dist dist-package",
    "clean-package": "rm -rf dist-package",
    "start": "yarn run build && yarn run start-no-build",
    "watch": "npm run env NODE_ENV=development -- webpack -w",
    "build": "npm run env NODE_ENV=development -- webpack",
    "build-production": "npm run env NODE_ENV=production -- webpack",
    "i18n": "node src/script/check-i18n.mjs",
    "start-no-build": "npm run env PICTURAMA_DEV_MODE=true -- electron .",
    "package-dir": "electron-builder --dir",
    "package": "electron-builder",
    "release": "yarn run clean && yarn run i18n && yarn run build-production && yarn run package",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:clean": "rm -rf dist-test"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "runner": "@jest-runner/electron/main",
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.test)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "((app|background|common|test-jest)/.*)": "<rootDir>/src/$1"
    }
  },
  "dependencies": {
    "@blueprintjs/core": "^3.28.2",
    "@blueprintjs/select": "^3.13.3",
    "bluebird": "^3.7.2",
    "classnames": "^2.2.6",
    "copy-text-to-clipboard": "^2.2.0",
    "exifr": "^6.0.0",
    "font-awesome": "^4.7.0",
    "gl-matrix": "^3.1.0",
    "heic2any": "^0.0.3",
    "image-size": "^0.9.3",
    "js-yaml": "^3.14.0",
    "justified-layout": "^4.0.0",
    "moment": "^2.26.0",
    "node-notifier": "9.0.0",
    "node-pre-gyp": "^0.17.0",
    "normalize.css": "^8.0.1",
    "piexifjs": "1.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.1.0",
    "react-redux": "^7.2.0",
    "react-search-field": "^1.2.0",
    "redux": "^4.0.5",
    "redux-logger": "3.0.6",
    "redux-thunk": "^2.3.0",
    "source-map-support": "^0.5.19",
    "sourcemapped-stacktrace": "^1.1.11",
    "sqlite3": "^5.0.0",
    "sqlite3-helper": "2.0.1",
    "typesafe-actions": "^5.1.0"
  },
  "optionalDependencies": {
    "libraw": "file:submodules/node-libraw",
    "node-libheif": "^1.9.1-rc.1"
  },
  "devDependencies": {
    "@jest-runner/electron": "^3.0.0",
    "@types/bluebird": "^3.5.33",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.19",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "~12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.12",
    "@types/sqlite3": "^3.1.6",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^6.0.2",
    "css-loader": "^3.6.0",
    "electron": "~11.1.0",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0",
    "file-loader": "^6.0.0",
    "jest": "^26.6.3",
    "less": "^3.13.0",
    "less-loader": "^6.1.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-gyp": "^7.1.2",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "~4.1.3",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-fix-default-import-plugin": "^1.0.3",
    "webpack-node-externals": "^1.7.2"
  },
  "repository": "https://github.com/picturama/picturama.git"
}
